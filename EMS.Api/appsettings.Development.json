{
    "ConnectionStrings": {
        "Database": "Host=evently.database;Port=5432;Database=evently;Username=postgres;Password=postgres;Include Error Detail=true",
        "Cache": "ems.redis:6379"
    },
    "Authentication": {
        "Audience": "account",
        "TokenValidationParameters": {
            "ValidIssuers": [ "http://ems.identity:8080/realms/ems", "http://localhost:18080/realms/ems" ]
        },
        "MetadataAddress": "http://ems.identity:8080/realms/ems/.well-known/openid-configuration",
        "RequireHttpsMetadata": false
    },
    "KeyCloak": {
        "HealthUrl": "http://ems.identity:9000/health"
    },
    "Serilog": {
        "Using": [
            "Serilog.Sinks.Console",
            "Serilog.Sinks.Seq"
        ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Information"
            }
        },
        "WriteTo": [
            { "Name": "Console" },
            {
                "Name": "Seq",
                "Args": { "serverUrl": "http://ems.seq:5341" }
            }
        ],
        "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
        "Properties": {
            "Application": "EMS.Api"
        }
    },
    "OTEL_EXPORTER_OTLP_ENDPOINT": "http://ems.jaeger:4317"
}
